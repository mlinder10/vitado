generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(uuid())
  email         String          @unique
  firstName     String
  lastName      String
  password      String
  createdAt     DateTime        @default(now())
  admin         Admin?
  resetPassword ResetPassword[]
}

model Admin {
  userId    String     @id
  createdAt DateTime   @default(now())
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  questions Question[]
}

model ResetPassword {
  id         String   @id @default(uuid())
  code       String   @unique
  validUntil DateTime
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Question {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  creatorId String

  topic   String
  concept String
  type    String

  question     String
  answer       String
  choices      String
  explanations String

  sources        String
  difficulty     String
  nbmeStyleNotes String

  creator Admin  @relation(fields: [creatorId], references: [userId], onDelete: NoAction)
  audit   Audit?
}

model Audit {
  id         String @id @default(uuid())
  questionId String @unique

  checklist   String
  suggestions String
  rating      String

  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model QuestionTopic {
  name String @id
}

model QuestionConcept {
  name String @id
}

model QuestionType {
  name String @id
}
