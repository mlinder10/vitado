generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  binaryTargets   = ["native", "rhel-openssl-1.0.x"] // add your target explicitly
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  firstName String
  lastName  String
  color     String
  password  String
  createdAt DateTime @default(now())

  admin             Admin?
  resetPassword     ResetPassword[]
  answeredQuestions AnsweredQuestion[]
}

model Admin {
  userId    String   @id
  createdAt DateTime @default(now())

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  questions Question[]
}

model ResetPassword {
  id         String   @id @default(uuid())
  code       String   @unique
  validUntil DateTime
  userId     String   @unique

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// model PracticeExam {
